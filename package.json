{
  "name": "degenduel",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "node index.js",
    "test:api": "./tests/api-test.sh",
    "generate-swagger": "node scripts/generate-swagger.js",
    "start:api": "pm2 start ecosystem.config.cjs --only degenduel-api",
    "stop:api": "pm2 stop degenduel-api",
    "restart:api": "pm2 restart degenduel-api",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:reset": "npx prisma db reset",
    "start": "node --experimental-loader=ts-node/esm --experimental-specifier-resolution=node index.js",
    "stop": "npm run stop:api",
    "rebuild": "node scripts/rebuild.js",
    "hard-restart": "node scripts/hard-restart.js",
    "restart": "node scripts/restart.js",
    "init-db": "node db/init-tables.js",
    "logs": "node scripts/watchLogs.js all 100",
    "logs:api": "node scripts/watchLogs.js api 100",
    "logs:error": "node scripts/watchLogs.js error 100",
    "logs:raw": "node scripts/watchLogs.js all 100 --raw",
    "logs:clear": "rm -f server/logs/*.log",
    "status": "pm2 status",
    "setup-db": "NODE_OPTIONS='--experimental-loader=ts-node/esm' ts-node scripts/setup-db.ts",
    "setup-db-js": "node scripts/setup-db.js",
    "test-db": "NODE_OPTIONS='--experimental-loader=ts-node/esm' ts-node scripts/test-db-simple.ts",
    "backup-db": "./scripts/backup-db.sh",
    "backup": "./scripts/backup-db.sh",
    "test:websocket": "node scripts/test-websocket.js",
    "test:websocket-envs": "node --experimental-loader=ts-node/esm --experimental-specifier-resolution=node scripts/test-websocket-envs.js",
    "db:status": "./scripts/db-tools.sh status",
    "db:backup": "./scripts/db-tools.sh backup",
    "db:reset-test": "./scripts/db-tools.sh reset-test",
    "db:restore": "./scripts/db-tools.sh restore",
    "db:safe-migrate": "npm run db:backup && npm run db:reset-test && npx prisma migrate dev"
  },
