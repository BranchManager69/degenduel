    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "date-fns": "^3.3.1",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
