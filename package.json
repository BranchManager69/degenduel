{
  "name": "degenduel",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "node server/server.js",
    "test:api": "./tests/api-test.sh",
    "generate-swagger": "node scripts/generate-swagger.js",
    "start:api": "pm2 start ecosystem.config.cjs --only degenduel-api",
    "stop:api": "pm2 stop degenduel-api",
    "restart:api": "pm2 restart degenduel-api",
    "start": "npm run start:api",
    "stop": "npm run stop:api",
    "rebuild": "node scripts/rebuild.js",
    "hard-restart": "node scripts/hard-restart.js",
    "restart": "node scripts/restart.js",
    "init-db": "node db/init-tables.js",
    "seed-db": "node db/seed.js",
    "logs": "node scripts/watchLogs.js all 100",
    "logs:api": "node scripts/watchLogs.js api 100",
    "logs:error": "node scripts/watchLogs.js error 100",
    "logs:raw": "node scripts/watchLogs.js all 100 --raw",
    "logs:clear": "rm -f server/logs/*.log",
    "status": "pm2 status",
    "setup-db": "NODE_OPTIONS='--loader ts-node/esm' ts-node scripts/setup-db.ts",
    "setup-db-js": "node scripts/setup-db.js",
    "test-db": "NODE_OPTIONS='--loader ts-node/esm' ts-node scripts/test-db-simple.ts",
    "backup-db": "./scripts/backup-db.sh",
    "backup": "./scripts/backup-db.sh"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.3",
    "express-validator": "^7.0.1",
    "gradient-string": "^3.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "pm2": "^5.3.1",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
